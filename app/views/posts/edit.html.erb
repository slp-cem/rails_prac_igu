<h1>記事の変更</h1>

<div role="form">
  <%= form_for @post do |f| %>
    <div class="form-group" >
      <%= f.label 'タイトル' %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label '内容' %>
      <%= f.text_field :main, class: "form-control" %>
    </div>
    <%= f.submit "更新", class: "btn btn-info" %>
<% end %>
</div>
